{
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "esbuild": "^0.25.10",
        "eslint": "^9.37.0",
        "fs-extra": "^11.3.2",
        "globals": "^16.4.0",
        "htmlhint": "^1.7.1",
        "madge": "^8.0.0",
        "stylelint": "^16.25.0",
        "stylelint-config-recommended": "^17.0.0"
    },
    "scripts": {
        "postinstall": "node -e \"try { require('fs').chmodSync(require('path').join(__dirname, 'node_modules', '.bin', 'esbuild'), '755'); } catch(e) { console.log('chmod skipped'); }\"",
        "lint:js": "eslint js",
        "lint:css": "stylelint css",
        "lint:html": "htmlhint **/*.html",
        "dev": "npx esbuild js/*.js --bundle --outdir=dist --servedir=. --serve=8080",
        "build": "npx esbuild js/*.js --bundle --minify --outdir=dist",
        "build:public": "npm run build && node -e \"const fs = require('fs-extra'); fs.ensureDir('public').then(() => Promise.all(['assets', 'css', 'dist', 'index.html', 'dashboard.html'].map((f) => fs.copy(f, 'public/' + f)))).then(() => console.log('âœ… Successfully!'));\""
    }
}